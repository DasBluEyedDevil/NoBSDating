# Auto detect text files and perform LF normalization
* text=auto

# Force LF for all text files (consistent across platforms)
*.ts text eol=lf
*.js text eol=lf
*.json text eol=lf
*.md text eol=lf
*.dart text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.sh text eol=lf
*.py text eol=lf

# Force CRLF for Windows batch files
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.mov binary
*.mp4 binary
*.mp3 binary
*.flv binary
*.fla binary
*.swf binary
*.gz binary
*.zip binary
*.7z binary
*.ttf binary
*.eot binary
*.woff binary
*.woff2 binary
*.pyc binary
*.pdf binary
*.class binary
*.jar binary
